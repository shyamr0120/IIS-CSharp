<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div>
        <table style="width: 100%;">

            <div class="header">

                <tr>
                    <td width="20%"><img src="~/Content/images/UNFLogo.jpg" alt="UNF Logo" width="200" height="100"></td>
                    <td width="60%">
                        <header>
                            <h1 style="text-align:justify; color:blue">Activity Tracker</h1>
                        </header>
                    </td>
                    <td width="20%">
                    </td>
                </tr>
                <h5>@Html.Partial("_LoginPartial")</h5>
            </div>

            <tr>
                <!-- Left sidebar -->
                <td width="30%">
                    <nav>
                        <h3>Navigation</h3>
                        @Html.ActionLink("Home", "Index", "Home")
                        </br>
                        @Html.ActionLink("About", "About", "Home")
                        </br>
                        @Html.ActionLink("Contact", "Contact", "Home")
                        </br>
                        @Html.ActionLink("Students", "Index", "Students")
                        </br>
                        @Html.ActionLink("Faculties", "Index", "Faculties")
                        </br>
                        @Html.ActionLink("Users", "Index", "Users")
                        </br>
                        @Html.ActionLink("Semesters", "Index", "Semesters")
                        </br>
                        @Html.ActionLink("Activities", "Index", "Activities")
                        </br>
                        </nav>
                </td>
                <!-- Content Body -->
                <td width="70%">
                    <div class="content">
                        @RenderBody()
                    </div>
                </td>
                <!-- Right sidebar -->
                <td width="0%"></td>
            </tr>
            </br>
            </br>
            </br>

            <div class="footer">
                <!-- Footer -->
                <tr>
                    <td>© 2019 All Rights Reserved</td>
                    <td>SCHOOL OF COMPUTING</td>
                    <td>@DateTime.Now.ToShortDateString()</td>
                </tr>
            </div>
        </table>

    </div>

    <!-- style -->

    <style>
        header {
            height: 100px;
            width: 100%;
            <!-- background-color: red; -->
        }

        nav {
            float: left;
            width: 200px;
            -height: 250px;
            <!--background-color: darkgoldenrod; -->
        }

        .content {
            background-color: aliceblue;
            <!-- padding: 20px; -->
        }

        footer {
            <!-- background-color: green; -->
            width: 100%;
            height: 50px;
            float: right;
            text-align: center;
        }
    </style>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
